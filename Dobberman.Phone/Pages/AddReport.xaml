    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="Dobberman" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="PageTitle" Text="Add Report" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,-391" DataContext="{Binding}">
            <TextBlock Height="37" HorizontalAlignment="Left" Margin="134,151,0,0"  Text="How do you feel?" VerticalAlignment="Top" Width="178" />
            <toolkit:AutoCompleteBox HorizontalAlignment="Left" Margin="70,62,0,0" Name="autoCompleteBox1" VerticalAlignment="Top" Height="69" Width="316" Text="Select Authority" GotFocus="AutoCompleteSelected" />
            <CheckBox Content="Get Location From GPS" Height="67" HorizontalAlignment="Left" Margin="70,414,0,0" Name="GPScheckbox" VerticalAlignment="Top" Width="316" IsChecked="True" Background="White" Checked="GPScheckbox_Checked"></CheckBox>
            <TextBox Name="Desc" Height="124" HorizontalAlignment="Left" Margin="27,311,0,0" Text="Enter Report Description" VerticalAlignment="Top" Width="406" />
            <CheckBox Background="White" BorderBrush="#BFC11414" Content="Post to autority's Facebook page" Height="74" HorizontalAlignment="Left" IsChecked="True" Margin="27,476,0,0" Name="checkBox2" VerticalAlignment="Top" Width="421" />
            <Button Content="" Height="104" HorizontalAlignment="Left" Margin="27,201,0,0" Name="button1" VerticalAlignment="Top" Width="107" BorderThickness="0" Opacity="0.7" Click="button1_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/128_1.png" />
                </Button.Background>
            </Button>
            <Button BorderThickness="0" Content="" Height="104" HorizontalAlignment="Left" Margin="166,201,0,0" Name="button2" Opacity="0.7" VerticalAlignment="Top" Width="107" Click="button2_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/128_4.png" />
                </Button.Background>
            </Button>
            <Button BorderThickness="0" Content="" Height="104" HorizontalAlignment="Left" Margin="302,201,0,0" Name="button3" Opacity="0.7" VerticalAlignment="Top" Width="107" Click="button3_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/128_6.png" />
                </Button.Background>
            </Button>
            <Button Content="Post Report!" Height="77" HorizontalAlignment="Left" Margin="88,522,0,0" Name="button4" VerticalAlignment="Top" Width="239" Click="PostReport_Click" />
        </Grid>
    </Grid>

